#include <stdio.h>
#include <string.h>
#include <stdlib.h>
int adcount(int x)
{
	x++;
	return x;
}
int main()
{
	printf("每用一次函数数字加一\n");
	int num = 0;
	num = adcount(num);
	printf("num=%d\n", num);
	num = adcount(num);
	printf("num=%d\n", num);
	num = adcount(num);
	printf("num=%d\n", num);
	return 0;
}
